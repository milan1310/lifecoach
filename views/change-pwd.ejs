<%- include('./partials/header') %> <%- include('./partials/cdn') %>
<div class="container-fluid roboto">
    <div class="row">
        <%- include('partials/admin-nav') %>
        <div class="col-sm min-vh-100">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8 my-3">
                    <h1 class="text-center">Change Password</h1>
                    <h3 class="text-center">User : <%= user.email %></h3>

                    <form action="/admin/changepassword" class="mt-5" method="POST">
                        <div class="form-group fs-5">
                          <label for="">Password</label>
                          <input type="text" name="password" class="form-control" id="pwd" placeholder="Password" minlength="6" required>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Change Password</button>
                      </form>

                      <div class="mt-5">
                          <form action="/admin/logout" method="post">
                              <div class="form-group fs-5">
                                  <label for="logout-btn">Logout</label>
                                  <input type="submit" class="btn btn-danger" value="logout">
                              </div>
                          </form>
                      </div>
                </div>
            </div>
        </div>  
    </div>
</div>

</body>
</html>